doctype html
html
    head
        title Add movie
        link( rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous" )
    body
        div.container
            h1 New movie
            form( action = '/addmovie', method = 'POST' ).form-inline
                div.form-group
                    div.col 
                        label.col-form-label-lg Title 
                        input( type = "text", name = "title", placeholder = "Title" ).form.form-control-lg
                div.form-group
                    div.col
                        label.col-form-label-lg Director      
                        input( type = "text", name = "director", placeholder = "Director" ).form.form-control-lg
                div.form-group
                    div.col
                        label.col-form-label-lg Year     
                        input( type = "number", name = "year", placeholder = "Year" ).form.form-control-lg
            
            form    
                div.form-group
                    div.col   
                        input( type = "submit", value = "Add" ).btn.btn-outline-primary.btn-lg
                